try:
    with open('in-class-example2.txt', "w+") as file:
        file.write("Python class line 1\n")
        file.write("Python class line 2\n")
        file.seek(0)
        print(file.read())
        # file.close() # python takes care of closing this file
except FileNotFoundError:
    print("File not found")